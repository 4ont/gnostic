	// JSONName {{.JSONName}}
	
	{{if eq .Position 4}}
	if value, ok := vars["{{.JSONName}}"]; ok {
		parameters.{{.Name}} = intValue(value)
	} 
	{{end}}
	
	{{if eq .Position 5}} // check value
	if len(r.Form["{{.JSONName}}"]) > 0 {
			parameters.{{.Name}} = intValue(r.Form["{{.JSONName}}"][0])
	}
	{{end}}
	
	{{end}}
	

	
		
